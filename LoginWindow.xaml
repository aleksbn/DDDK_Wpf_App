<Window x:Class="DDDK_Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDDK_Wpf"
        mc:Ignorable="d"
        Title="Welcome!" Height="350" Width="350"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/blood-drop.ico"
        ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="Email" FontSize="25" TextAlignment="Center" FontWeight="Bold" FontStyle="Italic"/>
        <TextBox Name="tbUsername" Text="admin@dddk.org" Margin="15" FontSize="15" TextAlignment="Center" Padding="5"/>
        <TextBlock Text="Password" FontSize="25" TextAlignment="Center" FontWeight="Bold" FontStyle="Italic"/>
        <PasswordBox Name="tbPassword" Password="Admin@417302" Margin="15" FontSize="15" HorizontalContentAlignment="Center" Padding="5"/>
        <Button Name="btnLogin" Content="Login" Click="btnLogin_Click" Margin="25" FontSize="25" Padding="10"/>
    </StackPanel>
</Window>
