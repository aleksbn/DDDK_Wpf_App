<UserControl x:Class="DDDK_Wpf.Views.Controls.DonationEventControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDDK_Wpf.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="180">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock x:Name="tbDonationEventLocation" Margin="0" Text="Donation Event Location" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="tbDonationEventDate" Margin="0" Text="Donation Event Date" FontSize="15" Foreground="DarkBlue"/>
        </StackPanel>
    </Grid>
</UserControl>
