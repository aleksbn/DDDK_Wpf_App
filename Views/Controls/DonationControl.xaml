<UserControl x:Class="DDDK_Wpf.Views.Controls.DonationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDDK_Wpf.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="180">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock x:Name="tbFullName" Text="Donator Full Name" Margin="0" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="tbDonatorId" Text="Donator ID" Margin="0" FontSize="15" Foreground="DarkBlue"/>
            <TextBlock x:Name="tbDonationDate" Text="Donation Date" Margin="0" FontSize="15" Foreground="DarkBlue"/>
        </StackPanel>
    </Grid>
</UserControl>
