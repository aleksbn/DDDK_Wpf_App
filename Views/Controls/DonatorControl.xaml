<UserControl x:Class="DDDK_Wpf.Views.Controls.DonatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DDDK_Wpf.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="150">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock x:Name="tbFullName" Margin="0" Text="Firstname LastName" FontSize="18" FontWeight="Bold"/>
            <TextBlock x:Name="tbAddress" Margin="0" Text="Address" FontSize="15" Foreground="DarkBlue"/>
            <TextBlock x:Name="tbPhone" Margin="0" Text="Phone" FontSize="15" Foreground="DarkBlue"/>
        </StackPanel>
    </Grid>
</UserControl>
